{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "paths": {
      "*": ["*", "src/*"]                  // Пути для разрешения импортов
    }
  },
  "include": [
    "srs/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
