{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".", // Добавьте эту строку
    "paths": {
      "*": ["*", "src/*"] // Пути для разрешения импортов
    }
  },
  "include": [
    "src/**/*.ts" // Исправлен путь для включения файлов
  ],
  "exclude": ["node_modules"]
}
